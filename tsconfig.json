{
    "compilerOptions": {
        "outDir": "./target/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "classic",
        "baseUrl": ".",
        "paths": {
            "http": [
                "node_modules/@types/node/index"
            ],
            "https": [
                "node_modules/@types/node/index"
            ],
            "*": [
                "node_modules/@types/*/index",
                "node_modules/@types/*",
                "node_modules/*/index"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}